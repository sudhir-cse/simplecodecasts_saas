<div class="row">
  <% if params[:plan]=="1" %>
    <div class="col col-md-6 col-md-offset-3 text-center">
      <h1>Basic Account</h1>
      <p>Sign up for free and get basic access to the community.</p>
    </div>
  <% else %>
    <div class="col col-md-6 col-md-offset-3 text-center">
      <h1>Pro Account</h1>
      <p>Sign up for the pro account for $10/month and get access to the community and contact information!</p>
    </div>
  <% end %>
  <div class="col col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
      <% if params[:plan]=='1' %>
        <%= render "basic_form" %>
      <% else %>
        <%= render "pro_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
